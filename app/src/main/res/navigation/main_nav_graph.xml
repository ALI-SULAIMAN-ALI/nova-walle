<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="jp.co.soramitsu.feature_onboarding_impl.presentation.welcome.WelcomeFragment"
        android:label="fragment_users"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/createAccountAction"
            app:destination="@id/createAccountFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />

        <action
            android:id="@+id/termsAction"
            app:destination="@id/termsFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />

        <action
            android:id="@+id/privacyAction"
            app:destination="@id/privacyFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />

    </fragment>

    <fragment
        android:id="@+id/createAccountFragment"
        android:name="jp.co.soramitsu.feature_onboarding_impl.presentation.create.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account">

    </fragment>

    <fragment
        android:id="@+id/termsFragment"
        android:name="jp.co.soramitsu.feature_onboarding_impl.presentation.terms.TermsFragment"
        android:label="fragment_terms"
        tools:layout="@layout/fragment_terms">

    </fragment>

    <fragment
        android:id="@+id/privacyFragment"
        android:name="jp.co.soramitsu.feature_onboarding_impl.presentation.privacy.PrivacyFragment"
        android:label="fragment_privacy"
        tools:layout="@layout/fragment_privacy">

    </fragment>

</navigation>